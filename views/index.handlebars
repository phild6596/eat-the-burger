<div class="row">
    <div class="col-sm-12">
        <img src="/assets/img/burger_pic.gif" alt="Hamburger" class='center-block'>
        <h1>Eat-the-Burger</h1>
    </div>
</div>
    <div class="row">
        <div class="col-sm-6">

            <h2 id="leftSide">Burgers Available To Eat!</h2>
            <ul>
                {{#each burgers}} {{#unless this.devoured}}
                <li>
                    {{this.id}} {{this.burger_name}}
            
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button class="change-devoured" type="submit" data-newdevoured="{{devoured}}">Devour It!</button>
                    </form>
            
                    <button class="delete-burger" data-id="{{this.id}}">Delete!</button>
                </li>
                {{/unless}} {{/each}}
            </ul>


        </div>
<div class="col-sm-6">
    <h2>Burgers that have been devoured!</h2>

        <ul>
            {{#each burgers}} {{#if this.devoured}}
                <li>
                    {{this.id}} {{this.burger_name}}
                </li>
                <button id="buttons" class="delete-burger" data-id="{{this.id}}">Delete!</button>
                    {{/if}} {{/each}}
        </ul>
</div>

<div class="col-sm-12">
<h2 class="burgerAdd">Add a burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="bu">Burger Name:</label>
        <input type="text" id="bu" name="burger_name">
    </div>

    <div class="form-group">
        <label for="devoured">Devoured?</label>
        <br>
        <input type="radio" name="devoured" value="0" checked> Eat Me!
        <br>
        <input type="radio" name="devoured" value="1"> Devoured
    </div>

    <button class="buttons" type="submit">Add burger</button>
</form>
</div>

