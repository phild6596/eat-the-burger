<h1>Eat-The-Burger</h1>

<h2>Burgers available to eat!</h2>

    <ul>
        {{#each burgers}} {{#unless this.devoured}}
            <li>
                {{this.id}} {{this.burger_name}}
            
                <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="true">
                    <button class="change-devoured" type="submit" data-newdevoured="{{devoured}}">Devour It!</button>
                </form>
            
            <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
            </li>
        {{/unless}} {{/each}}
    </ul>

<h2>Burgers that have been devoured!</h2>

<ul>
    {{#each burgers}} {{#if this.devoured}}
        <li>
            {{this.id}} {{this.burger_name}}
        </li>
<button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
    {{/if}} {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="bu">Burger Name:</label>
        <input type="text" id="bu" name="burger_name">
    </div>

    <div class="form-group">
        <label for="devoured">Devoured?</label>
        <br>
        <input type="radio" name="devoured" value="0" checked> Eat Me!
        <br>
        <input type="radio" name="devoured" value="1"> Devoured
    </div>

    <button type="submit">Add burger</button>
</form>

